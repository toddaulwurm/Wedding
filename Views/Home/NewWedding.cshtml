@using System.Text.RegularExpressions
@{
    ViewData["Title"] = "Dashboard";
}
@model WeddingModel

<div class="container">
    <a href="/logout" class="btn btn-dark">Logout</a>
    <a href="/Dashboard" class="btn btn-success">Home</a>
    <h1>Hey, @ViewBag.User.FirstName! <br>Ready To Plan a Wedding?</h1>
    <form asp-action="CreateWedding" asp-controller-="Home" method="post">
        <input type="hidden" name="UserId" value="@ViewBag.User.UserId">
        <div class="form-group">
            <label asp-for="NameOne"></label>
            <input asp-for="NameOne" class="form-control">
            <span asp-validation-for="NameOne" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NameTwo"></label>
            <input asp-for="NameTwo" class="form-control">
            <span asp-validation-for="NameTwo" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control">
            <span asp-validation-for="Date" class="alert-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address"></label>
            <input asp-for="Address" class="form-control">
            <span asp-validation-for="Address" class="alert-danger"></span>
        </div>
        <input type="submit" value="PLAN" class="btn btn-primary">
    </form>
</div>